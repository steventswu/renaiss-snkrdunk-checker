{
  "manifest_version": 3,
  "name": "SNKRDUNK Price Checker",
  "version": "1.0",
  "description": "Check SNKRDUNK prices while browsing Renaiss.xyz",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.renaiss.xyz/*",
    "*://*.snkrdunk.com/*"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.renaiss.xyz/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "popup.js",
        "popup.css"
      ],
      "matches": [
        "*://*.renaiss.xyz/*"
      ]
    }
  ]
}